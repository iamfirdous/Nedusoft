<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fragment_margin"
    android:background="@color/colorActivityBackground"
    tools:context="com.nexusinfo.nedusoft.ui.fragments.AttendanceFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout_attendance_imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_menu_attendence_black_24dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textView_class_taken_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NedusoftTheme.TextViewLabel"
                android:layout_below="@+id/linearLayout_attendance_imageview"
                android:text="Class taken"/>

            <TextView
                android:id="@+id/textView_class_taken_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NedusoftTheme.TextViewContent"
                android:layout_alignBaseline="@+id/textView_class_taken_label"
                android:layout_alignBottom="@+id/textView_class_taken_label"
                android:layout_alignParentStart="true"
                android:text="-" />

            <TextView
                android:id="@+id/textView_class_attended_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NedusoftTheme.TextViewLabel"
                android:layout_below="@+id/textView_class_taken_content"
                android:text="Class attended"/>

            <TextView
                android:id="@+id/textView_class_attended_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NedusoftTheme.TextViewContent"
                android:layout_alignBaseline="@+id/textView_class_attended_label"
                android:layout_alignBottom="@+id/textView_class_attended_label"
                android:layout_alignParentStart="true"
                android:text="-" />

            <TextView
                android:id="@+id/textView_attendance_percentage_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NedusoftTheme.TextViewLabel"
                android:layout_below="@+id/textView_class_attended_content"
                android:text="Percentage"/>

            <TextView
                android:id="@+id/textView_attendance_percentage_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NedusoftTheme.TextViewContent"
                android:layout_alignBaseline="@+id/textView_attendance_percentage_label"
                android:layout_alignBottom="@+id/textView_attendance_percentage_label"
                android:layout_alignParentStart="true"
                android:text="-" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
