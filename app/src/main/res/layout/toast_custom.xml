<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_toast_custom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_toast_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/textview_toast_bg"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:drawablePadding="5dp"
        android:text="This is custom toast message"
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />

    <View
        android:id="@+id/view_toast_custom_bottom"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:background="@drawable/toast_bottom"
        android:layout_below="@+id/textView_toast_custom"
        android:layout_alignStart="@+id/textView_toast_custom"
        android:layout_alignEnd="@+id/textView_toast_custom"/>

    <!--android:drawableLeft="@android:drawable/ic_dialog_alert"-->

</RelativeLayout>